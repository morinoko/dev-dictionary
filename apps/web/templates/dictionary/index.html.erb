<section class="index">
  <%= link_to 'Add new word', routes.new_word_path %>

  <% if words.any? %>
    <% words.each do |word| %>
      <div class="word">
        <h3 class="word__en"><%= word.en %></h3>
        <p class="word__ja"><%= word.ja %></p>
        <p class="word_kana"><%= word.kana %></p>
        <p class="word_romaji"><%= word.romaji %></p>
      </div>
    <% end %>
  <% else %>
    <p class="placeholder">There are no dictionary entries yet.</p>
  <% end %>
</section> 